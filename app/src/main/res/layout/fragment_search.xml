<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shapeListSearchView"
        android:iconifiedByDefault="false"
        android:queryHint="browse events" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:elevation="10dp"
            android:text="All Events"
            android:textSize="13dp"
            android:id="@+id/home_allevents"
            android:background="@drawable/round_back_btnsearch"
            android:onClick="allFilterTapped"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:elevation="10dp"
            android:text="My Events"
            android:textSize="13dp"
            android:id="@+id/home_myevents"
            android:background="@drawable/round_back_btnsearch"
            android:onClick="triangleFilterTapped"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:elevation="10dp"
            android:text="Registered Events"
            android:textSize="13dp"
            android:id="@+id/home_registeredevents"
            android:background="@drawable/round_back_btnsearch"
            android:onClick="squareFilterTapped"/>

    </LinearLayout>


    <ListView
        android:id="@+id/shapesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>